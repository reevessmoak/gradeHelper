<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.reeve.myfirstapp.ActivityCourseEditor" tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/courseeditor_edittext_coursename"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/courseeditor_textview_coursename"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/courseeditor_textview_coursename"/>
    <TextView
            android:text="courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseeditor_textview_coursename"
            tools:layout_constraintTop_creator="1" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"/>
    <Button
            android:text="ADDASSIGN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/courseeditor_button_addassign"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/courseeditor_button_addtype"
            tools:layout_constraintBaseline_creator="1" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="16dp"/>
    <Button
            android:text="addType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseeditor_button_addtype"
            tools:layout_constraintTop_creator="1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/courseeditor_edittext_coursename"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/courseeditor_button_addassign"/>
    <Button
            android:text="go back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseeditor_button_returnbut"
            app:layout_constraintBaseline_toBaselineOf="@+id/courseeditor_button_removebut"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/courseeditor_button_removebut"/>
    <Button
            android:text="remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseeditor_button_removebut"
            tools:layout_constraintTop_creator="1" tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="@+id/courseeditor_button_addtype" app:layout_constraintLeft_toRightOf="@+id/courseeditor_button_addtype"/>
    <ExpandableListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/courseeditor_expandablelistview_main"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/courseeditor_button_addassign"
            android:layout_marginBottom="12dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"/>
</android.support.constraint.ConstraintLayout>
